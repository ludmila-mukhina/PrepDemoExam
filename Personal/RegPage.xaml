<Page x:Class="Personal.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Personal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox Header="Введите код">
                <TextBox Name="TBCode"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите логин">
                <TextBox Name="TBLogin"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите пароль">
                <PasswordBox Name="PBPass"></PasswordBox>
            </GroupBox>
            <Button>Зарегистрироваться в системе</Button>
        </StackPanel>
    </Grid>
</Page>
